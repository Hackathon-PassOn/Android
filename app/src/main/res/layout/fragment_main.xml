<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Black01"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:paddingVertical="43dp"
        tools:context=".presentation.ui.MainFragment">

        <LinearLayout
            android:id="@+id/select_adrress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/address"
                android:layout_width="75dp"
                android:layout_height="18dp"
                android:layout_marginEnd="8dp"
                android:text="주소설정"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="48dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_drop_down_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/WhatMenu"
            android:layout_width="120dp"
            android:layout_height="66dp"
            android:text="어떤 메뉴가 나올까요?"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/select_adrress"
            android:layout_marginTop="32dp"
            />
        />

        <ImageView
            android:id="@+id/cafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_48110401"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/WhatMenu"
            android:layout_marginTop="32dp"  />

        <ImageView
            android:id="@+id/meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_48110402"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/WhatMenu"
            android:layout_marginTop="32dp" />

        <ImageView
            android:id="@+id/random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_48110404"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/WhatMenu"
            android:layout_marginTop="250dp" />

        <ImageView
            android:id="@+id/bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_48110403"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/WhatMenu"
            android:layout_marginTop="250dp"  />
        />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
