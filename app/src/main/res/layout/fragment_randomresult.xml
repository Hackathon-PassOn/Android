<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Black01"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:paddingVertical="43dp"
        tools:context=".presentation.ui.MainFragment">

        <TextView
            android:id="@+id/randompick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="랜덤뽑기"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="43dp"/>

        <ImageView
            android:id="@+id/menucard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_48110471"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="103dp"/>

        <ImageView
            android:id="@+id/arrowback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="43dp"
            android:layout_marginLeft="16dp"
            />

        <Button
            android:id="@+id/retry"
            android:layout_width="299dp"
            android:layout_height="49.68dp"
            android:backgroundTint="@color/Red02"
            android:text="다시하기"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="606dp"
            />
        <Button
            android:id="@+id/tohome"
            android:layout_width="299dp"
            android:layout_height="49.68dp"
            android:backgroundTint="@color/Red02"
            android:text="홈으로 이동"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="675dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>